<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="icon" type="image/png" href="/static/favicon.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/showdown@1.9.1/dist/showdown.min.js"></script>
    <link rel="stylesheet" href="/static/style.css">
    <style>
        #blog-posts {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .card {
            flex-basis: calc(33.33% - 20px);
            /* Ajusta el ancho de la tarjeta para acomodar 3 por l√≠nea */
            border-radius: 0.5rem;
            cursor: pointer;
            transition: box-shadow 0.3s;
        }

        .card:hover {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        .card-img-container {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .card-img {
            padding: 0.5rem;
            position: absolute;
            object-fit: contain;
            z-index: 2;
            height: 200px;
        }

        .card-img-secondary {
            object-fit: cover;
            width: 100%;
            height: 200px;
            filter: blur(2px);
            z-index: 1;
        }

        .card-text {
            overflow: hidden;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 3;
        }

        .category {
            padding: 0.2rem;
            border-radius: 0.4rem;
            background-color: #c9d7ff;
        }

        @media (max-width: 1250px) {
            .card {
                flex-basis: calc(50% - 20px);
            }
        }

        @media (max-width: 768px) {
            .card {
                flex-basis: calc(100% - 20px);
            }
        }
    </style>
</head>

<body>
    <div id="preloader">
        <div id="loader"></div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/"><img src="/static/favicon.png" width="60px" alt="JvilleDev's Blog"></img></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/categories">Categories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/about">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/contact">Contact</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        <header>
            <h1>Search Results</h1>
            <form id="search-form" action="/search/" method="GET">
                <div id="search-bar" class="input-group mb-3">
                    <input type="text" id="search-input" name="input" class="form-control" placeholder="Search..."
                        aria-label="Search" aria-describedby="basic-addon2">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>

        </header>
        <div id="results" class="mt-4">
            <% if (results.length===0) { %>
                <p>No results found.</p>
                <% } else { %>
                    <div id="blog-posts">
                        <% results.forEach(post=> { %>
                            <div class="card mb-3" data-id="<%= post.id %>">
                                <img src="<%= post.image %>" class="card-img-top" alt="<%= post.name %>">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= post.name %>
                                    </h5>
                                    <p class="card-text">
                                        <% let content=post.description; %>
                                            <% let startIndex=content.toLowerCase().indexOf(searchTerm.toLowerCase());
                                                %>
                                                <%= startIndex> 40 ? '...' : '' %>
                                                    <%= content.substring(Math.max(startIndex - 40, 0), startIndex) %>
                                                        <span class="highlight">
                                                            <%= content.substring(startIndex, startIndex +
                                                                searchTerm.length) %>
                                                        </span>
                                                        <%= content.substring(startIndex + searchTerm.length, startIndex
                                                            + searchTerm.length + 40) %>
                                                            <%= startIndex + searchTerm.length + 40 < content.length
                                                                ? '...' : '' %>
                                    </p>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } %>
        </div>
    </div>
    <script>

        const form = document.getElementById('search-form');
        const input = document.getElementById('search-input');
        form.addEventListener('submit', function (event) {
            event.preventDefault();

            const inputValue = input.value.trim();
            if (inputValue !== '') {
                form.action = `/search/${encodeURIComponent(inputValue)}`;
                form.submit();
            }
        });
    </script>

    <script>
        // INICIO DEL LOADER
        window.addEventListener('load', () => {
            setTimeout(() => {
                const preloader = document.getElementById('preloader');
                preloader.style.opacity = '0';

                setTimeout(() => {
                    preloader.style.display = 'none';
                }, 500);
            }, 500);
        });
        // FIN DEL LOADER
        function applyLinks() {
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                card.addEventListener('click', () => {
                    const postId = card.getAttribute('data-id');
                    window.location.href = `/post?id=${postId}`;
                });
            });
        }
        applyLinks();
    </script>
</body>

</html>